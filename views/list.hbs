<section class="hero  is-primary is-small">
    <div class="hero-body">
        <div class="container has-text-centered">
            <p class="title">
                My passwords
            </p>
        </div>
    </div>
</section>
<br>
<nav class="level">
    <div class="level-item"></div>
    <div class="level-item has-text-centered">
        <div>
            <p class="heading">Total Passwords</p>
            <p class="title">
                {{count}}
            </p>
        </div>
    </div>
    <div class="level-item has-text-centered">
        <div>
            <div class="field has-addons">
                <div class="control">
                    <input class="input" id="search" onkeyup="searchTableByWebsite()" type="text"
                        placeholder="Find by website">
                </div>
                <div class="control">
                    <a class="button is-info">
                        Search
                    </a>
                </div>

            </div>
        </div>
    </div>
    <div class="level-item has-text-centered">
        <div>

            <div class="field has-addons">
                <a class="button is-warning" href="add">
                    <span class="icon-text">
                        <span class="icon">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span> Add new password</span>
                    </span>
                </a>
            </div>
        </div>
    </div>
    <div class="level-item"></div>
</nav>
<br>
{{#if count}}
<div class="columns is-mobile">
    <div class="column is-half is-offset-one-quarter">

        <table class="table is-striped is-bordered is-hoverable is-fullwidth" id="table">
            <thead>
                <td>Website</td>
                <td>Name</td>
                <td>Password</td>
                <td>Managing options
                </td>
            </thead>
            <tbody>
                {{#each dataset}}
                <tr>
                    <td>{{this.website}}</td>
                    <td>{{this.userName}}</td>
                    <td>
                        <div id="password-hide-{{this._id}}" style="display:block; ">
                            <p>
                                ********
                            </p>
                        </div>
                        <div id="password-show-{{this._id}}" style="display:none;">
                            <p>
                                {{this.userPassword}}
                            </p>
                        </div>
                    </td>
                    <td>
                        <a href="javascript:swapPasswordVisibility('password-show-{{this._id}}','password-hide-{{this._id}}')"
                            class="button is-warning"> Show </a>
                        <a href="/edit/{{this._id}}" class="button is-info"> Edit </a>
                        <a href="/delete/{{this._id}}" onclick="return confirmDeletion();" class="button is-danger">
                            Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

{{/if}}